<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="inicio_txt_saludo">
        <item name="android:textColor">@color/colorBlanco</item>
        <item name="android:textSize">@dimen/inicio_txt_saludo</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/inicio_txt_saludo_margin_1</item>
    </style>

    <style name="inicio_btn_entrar">
        <item name="android:textColor">@color/colorBlanco</item>
        <item name="android:textSize">@dimen/inicio_btn_entrar</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
